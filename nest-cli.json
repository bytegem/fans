{
    "collection": "@nestjs/schematics",
    "sourceRoot": ".",
    "monorepo": true,
    "compilerOptions": {
        "webpack": true
    },
    "generateOptions": {
        "spec": false
    },
    "projects": {
        "client-server": {
            "type": "application",
            "root": "client-server",
            "entryFile": "main",
            "sourceRoot": "client-server",
            "compilerOptions": {
                "tsConfigPath": "tsconfig.build.json"
            }
        }
    }
}